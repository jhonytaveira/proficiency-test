<div class="container">
  <div class="content">
    <div class="box-content">
      <div class='row'>
        <div class='col-sm-10'>
          <h1>Alunos</h1><br>
          <div class='row'>
            <div class='col-sm-12' id="button-crud">
              <%= link_to 'Cadastrar', new_register_student_path, class: 'label label-primary btn lg' %>
            </div>
          </div>
          <table class='table table-striped table-bordered table-hover' style='margin-bottom:0;'>
            <thead>
              <tr>
                <th>Nome</th>
                <th>NÃºmero de Registro</th>
                <th>status</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% collection.each do |student| %>
                <tr>
                  <td><%= link_to student.name, register_student_path(student) %></td>
                  <td><%= student.register_number %></td>
                  <td><%= student.status_humanize %></td>
                  <td>
                    <%= link_to ('Editar'), edit_register_student_path(student), :class => 'btn btn-default btn-xs' %>
                    <%= link_to ('Deletar'),
                      register_student_path(student),
                        method: :delete,
                        data: { :confirm => t('.confirm', :default => 'Tem certeza ?') },
                        class: 'btn btn-xs btn-danger' %>
                    </td>
                  </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
