<div class="container">
  <div class="content">
    <div class="box-content">
      <div class='row'>
        <div class='col-sm-10'>
          <h1>Matr√≠cula</h1><br>
          <div class='row'>
            <div class='col-sm-12' id="button-crud">
              <%= link_to 'Cadastrar', new_register_classroom_path, class: 'label label-primary btn lg' %>
            </div>
          </div>
          <table class='table table-striped table-bordered table-hover' style='margin-bottom:0;'>
            <thead>
              <tr>
                <th>Aluno</th>
                <th>Curso</th>
                <th>Data</th>
                <th></th>
              </tr>
            </thead>
            <tbody>
              <% collection.each do |classroom| %>
                <tr>
                  <td>
                    <%= link_to classroom.student, register_classroom_path(classroom) %>
                  </td>
                  <td><%= classroom.course %></td>
                  <td><%= classroom.entry_at %></td>
                  <td>
                    <%= link_to ('Editar'), edit_register_classroom_path(classroom), :class => 'btn btn-default btn-xs' %>
                    <%= link_to ('Deletar'),
                      register_classroom_path(classroom),
                      method: :delete,
                      data: { :confirm => t('.confirm', :default => 'Tem certeza ?') },
                      class: 'btn btn-xs btn-danger' %>
                    </td>
                  </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
